{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "shell",
			"label": "shell: gcc build active file",
			"command": "gcc",
			"args": [
				"-g",
				"${workspaceFolder}\\src\\*.c",
				"${workspaceFolder}\\src\\include\\*.c",

				// "${workspaceFolder}/src/include/my/model/*.c",
				// "${workspaceFolder}/src/include/lib/*.c",
				// "${file}",
				"-static",
				"-o",
				// "${fileDirname}/${fileBasenameNoExtension}"
				"${workspaceFolder}\\target\\main.exe"
				// CHCP 65001
				// "${workspaceFolder}/target/main.o"

			],
			"options": {
				// "cwd": "/usr/bin"
				// "cwd": "${workspaceFolder}\\target"
				// "cwd": "${workspaceFolder}/target"

			},
			"problemMatcher": [
				"$gcc"
			],
			"group": "build"
		}
	]
}